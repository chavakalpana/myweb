pipeline{
			agent any
			environment{
			    PATH="/opt/maven/bin:$PATH"
                        }
			def pomfilepath= <pom.xml path>
			stages 
			{
					stage('Build') 
					{
					steps{
					sh "mvn clean"
					}
					}
					stage('Test') 
					{
					steps{
					sh "mvn test"
					}
					}
					stage('Compile') 
					{
					steps{
					sh "mvn compile"
					}
					}
				}
				
}
